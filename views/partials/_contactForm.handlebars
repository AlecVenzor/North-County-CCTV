<div class="h-screen">
<div class="w-full max-w-2xl m-auto">
    <h1 class="text-center m-2 text-2xl font-bold">Contact Form</h1>
    <form  method="POST" action="/contact" class=" p-5 pb-0 flex flex-col  border-2 border-blue-500 bg-gray-300 rounded-b-lg">
        <label for="First_Name" >First Name</label>
        <input type="text" id="First_Name" name="First_Name" placeholder="John" minlength="3" class="border border-3 border-blue-500" required /> <br>

        <label for="Last_Name">Last Name</label>
        <input  type="text" id ="Last_Name" name="Last_Name" placeholder="Doe" class="border border-3 border-blue-500" required /> <br>

        <label for="Email">Email</label>
        <input type="email" id ="Email" name="Email" placeholder="example@gmail.com" class="border border-3 border-blue-500" required /> <br>

        <label for="Phone">Phone</label>
        <input type="tel" id ="Phone"name="Phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="760-123-4567" class="border border-3 border-blue-500" required /> <br>

        <label for="Message">Message</label>
        <textarea minlength="3" row ="10" cols ="30" type="text" name="Message" id="Message" placeholder="Anything you would like to include" class="border border-3 border-blue-500"  required ></textarea>

        <input type="submit" class="mt-5 h-8 bg-blue-500 text-xl cursor-pointer mx-auto w-64" />

    </form>
</div>
</div>